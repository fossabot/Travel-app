<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <EditText
            android:id="@+id/trip_destination_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/details_activity_vertical_margin"
            android:layout_marginStart="@dimen/details_activity_horizontal_margin"
            android:layout_marginEnd="@dimen/details_activity_horizontal_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/trip_start_date_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/action_start_date"
            android:layout_marginTop="@dimen/details_activity_vertical_margin"
            android:layout_marginStart="@dimen/details_activity_horizontal_margin"
            app:layout_constraintTop_toBottomOf="@+id/trip_destination_et"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/trip_end_date_tv"
            tools:text="18.07.2022"/>

    <TextView
            android:id="@+id/trip_end_date_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/action_end_date"
            android:layout_marginTop="@dimen/details_activity_vertical_margin"
            android:layout_marginEnd="@dimen/details_activity_horizontal_margin"
            app:layout_constraintTop_toBottomOf="@+id/trip_destination_et"
            app:layout_constraintStart_toEndOf="@+id/trip_start_date_tv"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="05.08.2022"/>

    <EditText
            android:id="@+id/trip_comment_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="5"
            android:layout_marginTop="@dimen/details_activity_vertical_margin"
            android:layout_marginStart="@dimen/details_activity_horizontal_margin"
            android:layout_marginEnd="@dimen/details_activity_horizontal_margin"
            app:layout_constraintTop_toBottomOf="@+id/trip_start_date_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/trip_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_save_user"
            android:layout_marginBottom="@dimen/details_activity_vertical_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
